extends template/tmpl_in

block content
  #content.span10
    div
      ul.breadcrumb
        li
          a(href='#') Home
          span.divider /
        li
          a(href='#') Member
          span.divider /
        li
          a(href='#') Edit
    .row-fluid.sortable
      .box.span12
        .box-header.well(data-original-title='data-original-title')
          h2
            i.icon-edit
            | Member Information
          .box-icon
            a.btn.btn-setting.btn-round(href='#')
              i.icon-cog
            a.btn.btn-minimize.btn-round(href='#')
              i.icon-chevron-up
            a.btn.btn-close.btn-round(href='#')
              i.icon-remove
        .box-content
          form.form-horizontal(action='/users/#{user.Id}/edit', method='post')
            fieldset
              .control-group
                label.control-label(for='focusedInput') First Name
                .controls
                  input#focusedInput.input-xlarge.focused(name='firstname', type='text', value='#{user.Firstname}')
              .control-group
                label.control-label(for='focusedInput') Last Name
                .controls
                  input#focusedInput.input-xlarge.focused(name='lastname', type='text', value='#{user.Lastname}')
              .control-group
                label.control-label(for='focusedInput') Phone Number
                .controls
                  input#focusedInput.input-xlarge.focused(name='phone', type='text', value='#{user.Phone}')
              .control-group
                label.control-label(for='focusedInput') Username
                .controls
                  input#focusedInput.input-xlarge.focused(name='username', type='text', value='#{user.Username}')
              .control-group
                label.control-label(for='focusedInput') Password
                .controls
                  input#focusedInput.input-xlarge.focused(name='password', type='password', value='#{user.Password}')
              .form-actions
                button.btn.btn-primary(type='submit') Save changes
                a.btn(href='/users') Cancel