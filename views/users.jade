extends template/tmpl_in

block content
  #content.span10
    div
      ul.breadcrumb
        li
          a(href='#') Home
          span.divider /
        li
          a(href='#') Members
    .row-fluid.sortable
      .box.span12
        .box-header.well(data-original-title='data-original-title')
          h2
            i.icon-user
            | Members
          .box-icon
            a.btn.btn-setting.btn-round(href='#')
              i.icon-cog
            a.btn.btn-minimize.btn-round(href='#')
              i.icon-chevron-up
            a.btn.btn-close.btn-round(href='#')
              i.icon-remove
        .box-content
          table.table.table-striped.table-bordered.bootstrap-datatable.datatable
            thead
              tr
                th Full Name
                th Phone
                th Username
                th Password
                th Actions
            tbody
              for user in users
                tr
                  td #{user.Firstname} #{user.Lastname}
                  td.center #{user.Phone}
                  td.center  #{user.Username}
                  td.center
                    span.label.label-success  #{user.Password}
                  td.center
                    a.btn.btn-info(href='#')
                      i.icon-edit.icon-white
                      | Edit
                    a.btn.btn-danger(href='/users/#{user.Id}/delete')
                      i.icon-trash.icon-white
                      | Delete